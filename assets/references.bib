journal = {Human Behavior Understanding},
keywords = {feature selection and reduction,human activity recogni-,inertial sensors,magnetometers,tion and classification},
title = {{Human Activity Recognition Using Inertial / Magnetic Sensor Units}},
year = {2010}
}
