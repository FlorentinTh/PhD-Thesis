journal = {Procedia Manufacturing},
keywords = {Hand biomechanics,Human machine interface,Physical Human Robot Interaction,Pressure sensitive robot skin},
title = {{Grip Pressure and Wrist Joint Angle Measurement during Activities of Daily Life}},
year = {2015}
}
